<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ff00"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/hourHPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/hourLPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/MinuteHPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/MinuteLPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    
   <LinearLayout
       android:id="@+id/SmallBase"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical" >
        <TextView 
            android:id="@+id/weekInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            />
   </LinearLayout>
   
   
     <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal" >
     
         <!-- 年 -->
        <ImageView
            android:id="@+id/Year1BitPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/Year2BitPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/Year3BitPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/Year4BitPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
         
        
        <!-- 月 -->
     <ImageView
            android:id="@+id/mouth1BitPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/mouth2BitPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 日 -->
        <ImageView
            android:id="@+id/day1BitPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/day2BitPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
         
   </LinearLayout>
   
   
   
   
   
       
</LinearLayout>